{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Account Domain Model",
  "type": "object",
  "properties": {
    "Account": {
      "type": "object",
      "properties": {
        "accountIdentifier": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "accountState": {
          "type": "string"
        },
        "accountType": {
          "type": "string",
          "enum": [
            "DDA",
            "VAM",
            "CARD",
            "BDA",
            "OTHER"
          ]
        },
        "balance": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AccountBalance"
          }
        },
        "bankId": {
          "$ref": "#/definitions/Party"
        },
        "branchId": {
          "$ref": "#/definitions/Party"
        },
        "currency": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "number": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "number"
      ]
    },
    "AccountBalance": {
      "type": "object",
      "properties": {
        "accountId": {
          "$ref": "#/definitions/Account"
        },
        "amount": {
          "type": "number"
        },
        "asOfBusinessDate": {
          "type": "string",
          "format": "date"
        },
        "balanceDate": {
          "type": "string",
          "format": "date"
        },
        "balanceState": {
          "type": "string"
        },
        "balanceType": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "lastUpdatedDateTime": {
          "type": "string",
          "format": "date-time"
        },
        "positionType": {
          "type": "string"
        }
      },
      "required": [
        "accountId",
        "amount",
        "balanceDate",
        "balanceType",
        "id"
      ]
    },
    "Party": {
      "type": "object",
      "properties": {
        "address": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "channel": {
          "type": "string"
        },
        "contact": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "financialInformation": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "partyAlternateIdentifier": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "partyIdentifier": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "partyName": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "partyType": {
          "type": "string"
        },
        "paymentInstrument": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "websiteAvailable": {
          "type": "string"
        }
      },
      "required": [
        "id"
      ]
    },
    "PartyAccountRole": {
      "type": "object",
      "properties": {
        "accountId": {
          "$ref": "#/definitions/Account"
        },
        "partyId": {
          "$ref": "#/definitions/Party"
        },
        "role": {
          "type": "string"
        }
      },
      "required": [
        "accountId",
        "partyId",
        "role"
      ]
    },
    "PartyAssignedRole": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "definitions": {
    "Account": {},
    "AccountBalance": {},
    "Party": {},
    "PartyAccountRole": {},
    "PartyAssignedRole": {}
  }
}