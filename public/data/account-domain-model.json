{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Account Domain Model",
  "type": "object",
  "properties": {
    "Account": {
      "type": "object",
      "properties": {
        "accountIdentifier": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "accountState": {
          "type": "string"
        },
        "accountType": {
          "type": "string",
          "enum": [
            "DDA",
            "VAM",
            "CARD",
            "BDA",
            "OTHER"
          ]
        },
        "balance": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AccountBalance"
          }
        },
        "bankId": {
          "$ref": "#/definitions/Party"
        },
        "branchId": {
          "$ref": "#/definitions/Party"
        },
        "currency": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "number": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "number"
      ]
    },
    "AccountBalance": {
      "type": "object",
      "properties": {
        "accountId": {
          "$ref": "#/definitions/Account"
        },
        "amount": {
          "type": "number"
        },
        "asOfBusinessDate": {
          "type": "string",
          "format": "date"
        },
        "balanceDate": {
          "type": "string",
          "format": "date"
        },
        "balanceState": {
          "type": "string"
        },
        "balanceType": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "lastUpdatedDateTime": {
          "type": "string",
          "format": "date-time"
        },
        "positionType": {
          "type": "string"
        }
      },
      "required": [
        "accountId",
        "amount",
        "balanceDate",
        "balanceType",
        "id"
      ]
    },
    "Party": {
      "type": "object",
      "properties": {
        "address": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "channel": {
          "type": "string"
        },
        "contact": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "financialInformation": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "partyAlternateIdentifier": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "partyIdentifier": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "partyName": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "partyType": {
          "type": "string"
        },
        "paymentInstrument": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "websiteAvailable": {
          "type": "string"
        }
      },
      "required": [
        "id"
      ]
    },
    "PartyAccountRole": {
      "type": "object",
      "properties": {
        "accountId": {
          "$ref": "#/definitions/Account"
        },
        "partyId": {
          "$ref": "#/definitions/Party"
        },
        "role": {
          "type": "string"
        }
      },
      "required": [
        "accountId",
        "partyId",
        "role"
      ]
    },
    "PartyAssignedRole": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "example":{
    "Account": {
      "id": "ACC123456",
      "number": "9876543210",
      "accountIdentifier": ["IBAN123456", "SWIFT98765"],
      "accountState": "Active",
      "accountType": "DDA",
      "balance": [
        {
          "id": "BAL001",
          "accountId": "ACC123456",
          "amount": 5000.75,
          "asOfBusinessDate": "2025-03-01",
          "balanceDate": "2025-03-01",
          "balanceState": "Available",
          "balanceType": "Current",
          "lastUpdatedDateTime": "2025-03-01T10:15:30Z",
          "positionType": "Credit"
        }
      ],
      "bankId": {
        "id": "BANK123",
        "partyName": ["Global Bank"],
        "partyType": "Bank",
        "status": "Active"
      },
      "branchId": {
        "id": "BRANCH001",
        "partyName": ["Main Street Branch"],
        "partyType": "Branch",
        "status": "Active"
      },
      "currency": "USD",
      "name": "John Doe Checking Account"
    },
    "AccountBalance": {
      "id": "BAL002",
      "accountId": "ACC123456",
      "amount": 12000.50,
      "asOfBusinessDate": "2025-03-01",
      "balanceDate": "2025-03-01",
      "balanceState": "Pending",
      "balanceType": "Savings",
      "lastUpdatedDateTime": "2025-03-01T11:00:00Z",
      "positionType": "Credit"
    },
    "Party": {
      "id": "CUST001",
      "partyName": ["John Doe"],
      "partyType": "Individual",
      "status": "Active",
      "address": ["123 Main St, New York, NY"],
      "contact": ["john.doe@example.com", "+1234567890"],
      "role": "Account Holder"
    },
    "PartyAccountRole": {
      "accountId": "ACC123456",
      "partyId": "CUST001",
      "role": "Owner"
    },
    "PartyAssignedRole": {
      "name": "Primary Account Holder",
      "code": "PAH001",
      "description": "The main individual responsible for the account."
    }
  },
  "definitions": {
    "Account": {},
    "AccountBalance": {},
    "Party": {},
    "PartyAccountRole": {},
    "PartyAssignedRole": {}
  }
}